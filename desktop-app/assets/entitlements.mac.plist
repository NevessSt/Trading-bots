<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow network access for trading API connections -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Allow access to user's home directory for settings and data -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow access to Downloads folder for exporting data -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow camera access for QR code scanning (if implemented) -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Allow microphone access for voice commands (if implemented) -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Allow notifications -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Allow JIT compilation for better performance -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory for Node.js -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow DYLD environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Disable library validation for Node.js modules -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow debugging for development builds -->
    <key>com.apple.security.get-task-allow</key>
    <true/>
    
    <!-- Hardened runtime compatibility -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Allow printing (for reports and data export) -->
    <key>com.apple.security.print</key>
    <true/>
    
    <!-- Allow address book access (for contact management if implemented) -->
    <key>com.apple.security.personal-information.addressbook</key>
    <true/>
    
    <!-- Allow calendar access (for scheduling if implemented) -->
    <key>com.apple.security.personal-information.calendars</key>
    <true/>
</dict>
</plist>