# Flask settings
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key

# MongoDB settings
MONGO_URI=mongodb://localhost:27017/trading_bot

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key

# Binance API settings
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_TESTNET=True

# Coinbase Pro API settings
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
COINBASE_PASSPHRASE=your-coinbase-passphrase
COINBASE_TESTNET=true
COINBASE_ENABLED=true

# KuCoin API settings
KUCOIN_API_KEY=your-kucoin-api-key
KUCOIN_API_SECRET=your-kucoin-api-secret
KUCOIN_PASSPHRASE=your-kucoin-passphrase
KUCOIN_TESTNET=true
KUCOIN_ENABLED=true

# Bybit API settings
BYBIT_API_KEY=your-bybit-api-key
BYBIT_API_SECRET=your-bybit-api-secret
BYBIT_TESTNET=true
BYBIT_ENABLED=true

# Kraken API settings
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret
KRAKEN_ENABLED=true

# OKX API settings
OKX_API_KEY=your-okx-api-key
OKX_API_SECRET=your-okx-api-secret
OKX_PASSPHRASE=your-okx-passphrase
OKX_TESTNET=true
OKX_ENABLED=true

# Trading settings
DEFAULT_TRADE_AMOUNT=10.0
MAX_OPEN_TRADES=3
MAX_DAILY_LOSS=5.0

# Notification settings
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Email notification settings
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Security settings
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# Redis settings (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Exchange API Keys (encrypted storage)
EXCHANGE_API_KEYS_ENCRYPTED=true

# Stripe settings
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Development settings
DEBUG=false
TESTING=false

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=1.0.0

# Database settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_TIMEOUT=30